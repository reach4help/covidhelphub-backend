{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "rules": {
    "max-line-length": [
      true,
      120
    ]
  },
  "compilerOptions": {
    "lib": ["es2020", "esnext.asynciterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2020",
    "skipLibCheck": true,
    "outDir": "./dist/src",
    "experimentalDecorators": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "test",
  ]
}
